		float a,b;
		char ch;
		Scanner sc = new Scanner(System.in);
		System.out.println("enter value1");
		a = sc.nextFloat();
		System.out.println("enter value2");
		b = sc.nextFloat();
		System.out.println("Please select operation to perform + - * /");
		ch = sc.next();
	}

}
